      ],
      "presentation": {
        "clear": true,
      },
      "isBackground": true,
      "icon": {
        "id": "beaker",
        "color": "terminal.ansiGreen"
      },
    },
    {
      "label": "make: clean",
      "detail": "Remove compiled and generated files, but preserve installed dependencies",
      "type": "process",
      "command": "/usr/bin/make",
      "args": [
        "clean"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": true,
        "showReuseMessage": false,
        "clear": true,
        "close": true
      },
      "icon": {
        "id": "trash",
        "color": "terminal.ansiRed"
      }
    }
  ],
}

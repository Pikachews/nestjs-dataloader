        //     "activeOnStart": true,
        //     "beginsPattern": "RERUN",
        //     "endsPattern": "for file changes...$"
        //   },
        //   "applyTo": "allDocuments",
        //   "severity": "error",
        //   "pattern": [
        //     {
        //       "regexp": "(\\x1b\\[[0-9;]*m)?FAIL(\\x1b\\[[0-9;]*m)?  (.+?)( > )",
        //       "file": 3,
        //     },
        //     {
        //       "regexp": "(.+?): (.+)$",
        //       "code": 1,
        //       "message": 3,
